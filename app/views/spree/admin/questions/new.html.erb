<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @question } %>

<% content_for :page_title do %>
  <%= Spree.t(:new_question) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to t(:back_to_questions_list), admin_product_questions_url(@product), { class: 'btn-success', icon: 'arrow-left', id: 'back_to_list' } %>
<% end %>

<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: t('questions_and_answers') } %>

<%= form_for [:admin, @product, @question], method: :post, html: { multipart: true } do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
